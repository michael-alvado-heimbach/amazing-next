{
	"name": "amazing-next",
	"version": "1.0.3",
	"description": "Next boilerplate with high performance, great accessibilities and best practices based on google lighthouse.",
	"main": "pages/index.js",
	"scripts": {
		"dev": "node server.js",
		"build": "rimraf .next && next build",
		"start": "cross-env NODE_ENV=production node server.js",
		"export": "rimraf out && next export",
		"test": "rimraf coverage && cross-env NODE_ENV=test jest --coverage",
		"lint": "eslint . --fix",
		"prettify": "prettier --write '**/*.*'",
		"debug": "cross-env NODE_OPTIONS=--inspect node server.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/michael-alvado-heimbach/amazing-next.git"
	},
	"keywords": [
		"nextjs",
		"express",
		"@testing-library/react",
		"next-css",
		"PWA",
		"material-ui",
		"eslint"
	],
	"author": "Michael Alvado Heimbach",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/michael-alvado-heimbach/amazing-next/issues"
	},
	"homepage": "https://github.com/michael-alvado-heimbach/amazing-next#readme",
	"dependencies": {
		"@material-ui/core": "^4.6.1",
		"@material-ui/icons": "^4.5.1",
		"@material-ui/styles": "^4.6.0",
		"@zeit/next-css": "^1.0.1",
		"compression": "^1.7.4",
		"express": "^4.17.1",
		"fontfaceobserver": "^2.1.0",
		"next": "^9.1.4",
		"next-images": "^1.2.0",
		"next-offline": "^5.0.0",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0"
	},
	"devDependencies": {
		"@babel/core": "^7.7.2",
		"@testing-library/react": "^9.3.2",
		"babel-eslint": "^10.0.3",
		"babel-jest": "^24.9.0",
		"cross-env": "^6.0.3",
		"eslint": "^6.6.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.6.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.16.0",
		"eslint-plugin-react-hooks": "^2.3.0",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"jest-css-modules": "^2.1.0",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.0"
	}
}
